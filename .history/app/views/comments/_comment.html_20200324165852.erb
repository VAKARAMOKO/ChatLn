<!-- comment box print/!-->

<div class="block bg-white border border-t border-r border-b border-l rounded-t-lg rounded-r-lg rounded-l-lg rounded-b-lg   ">
    <!-- avatar/!-->
    <div class="flex-row">
        <div class="flex items-center -mt-16">
            <!-- avatar 64x64/!-->
            <img src="https://bulma.io/images/placeholders/64x64.png" class="  flex w-16red-full mr-4mr-4  ">
            <!-- current_user.username/!-->

            <div class="text-boldext-cecenter">
                <!--meta info sur user /!-->
                <% if comment.user.status == '1' %>
                    <span>Professeur</span>
                    <% else %>
                        <span>Eleve</span>
                        <% end %>
                            <%= comment.user.username %>
            </div>
        </div>
    </div>
    <!-- content/!-->
    <!-- refactoriser le code via les custom style/!-->
    <div class="p-2">
        <% if comment.user.status == '1' %>
            <div class="mb-2 border bg-blue-200-t rounded-t-lg rounded-r-lg rornded-l-lg rounded-b-lg -mb-16 -mt-16">
                <%= comment.content %>
            </div>
            <% else %>
                <div class="mb-2 border-t rounded-t-lg rounded-r-lg rornded-l-lg rounded-b-lg -mb-16 -mt-16">
                    <%= comment.content %>
                </div>
                <% end %>

    </div>
</div>