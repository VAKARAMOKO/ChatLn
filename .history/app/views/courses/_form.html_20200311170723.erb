<div class="section ">
  <div class="container">
    <div class="columns ">
      <div class="column is-mobile">
        <%= simple_form_for(@course) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


          <div class="field">
            <div class="control">
              <%= f.input :title, required: false, input_html: { class: 'input' }, wrapper: false, label_html: { class: "string" }, label:'Titre:', placeholder:"donner un titre qui attire l'attention" %>
            </div>
          </div>                

          <div class="field">
            <div class="control">
              <%= f.input :content, required: false, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: "string" }, label:'Contenu:', as: :summernote %>
                
             
             <!-- trouver un moyen pour eviter l'enregistrement des balises html, voir

              *le champs visible le recupere et l'invisible le safe
              *.html_safe 
              *un champs hidden avec html_safe qui sera enregistrer dans la db/ 
              -->
            
            </div>
          </div>
          <br>
          <div class="columns">            
            <div class="field">
              <div class="control has-icons-left">
                <span class="select">                  
                <%= f.input_field :matiere_id, collection:@matieres.map { |m| [m.matiere, m.id] }, prompt: "la Matière" %>
                </span>

                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>           
              </div>
            </div>
            <div class="field">
              <div class="control has-icons-left">
                <span class="select">                  
                <%= f.input_field :level_id, collection:@levels.map { |l| [l.title, l.id] }, prompt: "Niveau du cours" %>
                </span>

                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>           
              </div>
            </div>
          </div>

                         
            

          <!-- ajouter le niveau du cours/!-->
          <div class="field">
            <div class="control">
                <%= f.button :submit,"Créer le cours",  class:"button is-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>    
</div>
