 <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Actuellement en attente de confirmation : <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password, autocomplete: "off", hint: "Laisser se champs vide, si vous ne changez pas votre mot de passe.", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "string" }, placeholder:'Nouveau mot de passe', label:'Nouveau mot de passe :'  %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :current_password, hint: "Confirmez votre nouveau mot de passe.", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "string" }, label:'Confirmation nouveau mot de passe : ' ,placeholder:'retaper votre nouveau mot de passe'%>
        </div>
      </div> 
 <% end %>
