<h1 class="title is-2">Matières</h1>

<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to 'Créer une matière', new_classroom_path, class:'button is-dark' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Matière</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= link_to classroom.title, classroom %></td>
      <td>
        <div class="buttons is-right">
          <%= link_to 'Voir', classroom, class:'button is-dark' %>
          <%= link_to 'Modifier', edit_classroom_path(classroom), class:'button is-info' %>
          <%= link_to 'Supprimer', classroom, class:'button is-danger', method: :delete, data: { confirm: "La suppression sera definitive? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
