<p id="notice"><%= notice %></p>

<h1 class="title is-2">Niveaux</h1>

<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to 'Créer une matière', new_level_path, class:'button is-dark' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Niveau</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @levels.each do |level| %>
    <tr>
      <td><%= link_to level.title, level %></td>
      <td>
        <div class="buttons is-right">
          <%= link_to 'Voir', level, class:'button is-dark' %>
          <%= link_to 'Modifier', edit_level_path(level), class:'button is-info' %>
          <%= link_to 'Supprimer', level, class:'button is-danger', method: :delete, data: { confirm: "La suppression sera definitive? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

