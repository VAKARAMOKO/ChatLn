<!-- contents feed/!-->
	
<!-- each for course  /!-->
<% @courses.each do |course| %>
<div class="p-2 course__content border bg-white rounded-t-lg rounded-b-lg overflow-hidden border-t border-b border-l border-r mb-2">

	<!-- meta data course/!-->
	<small class="font-bold">
	 Cours: <%= link_to course.matiere.matiere, course.matiere %> - <%= course.level.title %>  
    </small>
    <!-- course title/!-->
	<p class="no-underline"> 
		<%= link_to course, class:"mt-1 text-lg leading-tight font-semibold text-gray-900 hover:underline hover:font-semibold" do %>
		  <%= course.title %> 
		<% end %>
	</p>
	<!-- avatar and meta data users/!-->
	<div class="flex items-center -mt-16">
		<!-- avatar user/!-->
		<img src="https://bulma.io/images/placeholders/32x32.png" class=" w-16 rounded-full mr-2">
		
		<!-- current_user.username/!-->
		<span class="leading-none text-gray-900 font-sans text-base no-underline "> professeur 
		<%= link_to course.user.username, user_path(course.user) %>             
		</span>
	</div>
	<!-- status user 
	<div class="text-sm">
		if <%  status_user(current_user) %>
		<p class="text-gray-900 leading-none text-2xl">
			,Professeur de <%= course.matiere.matiere %> au <%= course.user.school_name %> de <%= course.user.city %>
		</p>
		end <%  %>

	</div>
	< user bio/!
	<p class="text-gray-600 leading-tight"> <%= course.user.resume %> </p>
		/!-->

	<!-- content course/!-->
	<div class="whitespace-normal leading-tight border border-t border-r border-b border-l rounded-t-lg rounded-r-lg rounded-l-lg rounded-b-lg -mt-12">
	<p class="readMore p-2 ml-2 mr-2">		
		 <%=  sanitize(course.content[ 0 ... 1500]) %>		  
	</p>			   
		<%= link_to course_path(course) do%>
			<span class="button is-info is-outlined mb-2 ml-2 hover:no-underline"> participez au cours ...</span>
		<% end %>
	</div>
	
</div>
<% end %>
</div> 